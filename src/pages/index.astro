---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Hero from '../components/Hero.astro';
import Problem from '../components/Problem.astro';
import Features from '../components/Features.astro';
import Agents from '../components/Agents.astro';
import Showcase from '../components/Showcase.astro';
import Philosophy from '../components/Philosophy.astro';
import DevNote from '../components/DevNote.astro';
import Pricing from '../components/Pricing.astro';
import Footer from '../components/Footer.astro';
import ProjectProgress from '../components/ProjectProgress.astro';
---

<Layout title="Molt Code - Workstation for Effective AI Agents">
  <div class="page-layout">
    <div class="main-content">
      <Nav />
      <main>
        <Hero />
        <Problem />
        <Features />
        <Showcase />
        <Agents />
        <Philosophy />
        <DevNote />
        <Pricing />
      </main>
      <Footer />
    </div>
    <ProjectProgress />
  </div>
</Layout>

<style>
  .page-layout {
    display: grid;
    grid-template-columns: 1fr 20%;
    min-height: 100vh;
  }

  .main-content {
    overflow-y: auto;
  }

  @media (max-width: 1024px) {
    .page-layout {
      grid-template-columns: 1fr;
    }
  }
</style>
