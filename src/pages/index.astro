---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Hero from '../components/Hero.astro';
import AgentRoles from '../components/AgentRoles.astro';
import HeroFeatures from '../components/HeroFeatures.astro';
import Problem from '../components/Problem.astro';
import HowItWorks from '../components/HowItWorks.astro';
import Features from '../components/Features.astro';
import Agents from '../components/Agents.astro';
import Philosophy from '../components/Philosophy.astro';
import DevNote from '../components/DevNote.astro';
import CtaBand from '../components/CtaBand.astro';
import Footer from '../components/Footer.astro';
import ProjectProgress from '../components/ProjectProgress.astro';
---

<Layout title="Molt Code â€” Orchestrate AI Coding Agents">
  <div class="page-layout">
    <div class="main-content">
      <Nav />
      <main>
        <Hero />
        <AgentRoles />
        <HowItWorks />
        <Problem />
        <Features />
        <Agents />
        <HeroFeatures />
        <Philosophy />
        <DevNote />
        <CtaBand />
      </main>
      <Footer />
    </div>
    <ProjectProgress />
  </div>
</Layout>

<style>
  .page-layout {
    display: grid;
    grid-template-columns: 1fr 18%;
    min-height: 100vh;
  }

  .main-content {
    overflow-y: auto;
  }

  @media (max-width: 1024px) {
    .page-layout {
      grid-template-columns: 1fr;
    }
  }
</style>
