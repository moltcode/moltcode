---
import { config } from '../config';
---

<section class="relative pt-24 md:pt-28 pb-16 md:pb-20 px-4 md:px-6 overflow-hidden" id="hero">
  <!-- Animated grid background -->
  <div class="hero-grid-bg"></div>
  
  <!-- Floating orbs -->
  <div class="absolute top-10 left-[15%] w-[350px] h-[350px] rounded-full blur-[100px] animate-float pointer-events-none hero-orb-1"></div>
  <div class="absolute bottom-10 right-[10%] w-[280px] h-[280px] rounded-full blur-[80px] animate-float-delayed pointer-events-none hero-orb-2"></div>
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] rounded-full blur-[150px] pointer-events-none hero-orb-center"></div>

  <div class="max-w-6xl mx-auto relative z-10">
    <!-- Status bar -->
    <div class="flex justify-center mb-6 md:mb-8 hero-fade-in" style="animation-delay: 0s">
      <div class="status-bar">
        <div class="status-dot-live"></div>
        <span class="status-text">v{config.version}</span>
        <span class="status-divider">|</span>
        <a href="/docs/changelog" class="status-link">What's new →</a>
      </div>
    </div>

    <!-- Main heading with animated reveal -->
    <h1 class="hero-heading">
      <span class="hero-line hero-line-1">Run AI agents</span>
      <span class="hero-line hero-line-2">from a real</span>
      <span class="hero-line hero-line-3">
        <span class="gradient-text">workstation.</span>
      </span>
    </h1>

    <!-- Sub -->
    <p class="text-center text-base md:text-xl text-theme-primary/50 max-w-2xl mx-auto mb-8 leading-relaxed hero-fade-in px-2" style="animation-delay: 0.6s">
      One desktop app to orchestrate Claude, Codex, and Gemini across all your projects.
      <span class="hidden md:inline"><br /></span>
      Your API keys. Zero subscriptions. Installs in 10 seconds.
    </p>

    <!-- Download-first CTA — big and unmissable -->
    <div class="hero-download-block hero-fade-in" style="animation-delay: 0.8s">
      <a href={config.downloadUrl} data-track-download class="cta-download group">
        <div class="cta-download-inner">
          <div class="cta-icon-wrap">
            <svg class="cta-dl-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
              <polyline points="7 10 12 15 17 10"/>
              <line x1="12" y1="15" x2="12" y2="3"/>
            </svg>
          </div>
          <div class="cta-text-wrap">
            <span class="cta-main-text">Download Molt Code</span>
            <span class="cta-sub-text">
              <span class="hidden sm:inline">Free for macOS · Apple Silicon & Intel · </span>
              <span class="sm:hidden">macOS · Free · </span>
              v{config.version}
            </span>
          </div>
          <svg class="cta-arrow hidden sm:block" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </div>
      </a>

      <!-- Trust row directly under download -->
      <div class="trust-row">
        <span class="trust-chip">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="20 6 9 17 4 12"/></svg>
          No account needed
        </span>
        <span class="trust-chip">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="20 6 9 17 4 12"/></svg>
          Free forever
        </span>
        <span class="trust-chip">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="20 6 9 17 4 12"/></svg>
          Your keys, your data
        </span>
        <span class="trust-chip hidden sm:flex">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="20 6 9 17 4 12"/></svg>
          Open source
        </span>
      </div>

      <!-- Secondary link -->
      <div class="flex justify-center mt-2 md:mt-3">
        <a href={config.githubUrl} target="_blank" class="github-link group">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <span>or view source on GitHub</span>
          <svg class="w-3 h-3 opacity-0 group-hover:opacity-60 transition-opacity" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M7 17L17 7M17 7H7M17 7V17"/></svg>
        </a>
      </div>
    </div>

    <!-- App screenshot with cinematic frame -->
    <div class="relative max-w-5xl mx-auto hero-fade-in mt-10 md:mt-16" style="animation-delay: 1.1s">
      <div class="screenshot-glow"></div>
      <div class="screenshot-border"></div>
      <div class="screenshot-frame">
        <!-- Window chrome -->
        <div class="screenshot-chrome">
          <div class="flex items-center gap-1.5">
            <span class="w-2.5 h-2.5 md:w-3 md:h-3 rounded-full bg-[#ff5f57]"></span>
            <span class="w-2.5 h-2.5 md:w-3 md:h-3 rounded-full bg-[#febc2e]"></span>
            <span class="w-2.5 h-2.5 md:w-3 md:h-3 rounded-full bg-[#28c840]"></span>
          </div>
          <span class="screenshot-chrome-text">Molt Code</span>
          <div></div>
        </div>
        <img
          src="/hero_screenshot.png"
          alt="Molt Code workstation showing multi-agent orchestration across projects"
          class="w-full h-auto"
          loading="eager"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .hero-grid-bg {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(var(--color-accent-rgb), 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(var(--color-accent-rgb), 0.03) 1px, transparent 1px);
    background-size: 40px 40px;
    mask-image: radial-gradient(ellipse 70% 50% at 50% 40%, black, transparent);
    -webkit-mask-image: radial-gradient(ellipse 70% 50% at 50% 40%, black, transparent);
  }

  .hero-orb-1 { background: rgba(var(--color-accent-rgb), 0.08); }
  .hero-orb-2 { background: rgba(var(--color-accent-strong-rgb), 0.06); }
  .hero-orb-center { background: rgba(var(--color-accent-rgb), 0.04); }

  /* Status bar */
  .status-bar {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.75rem;
    border-radius: 9999px;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    font-size: 0.75rem;
    backdrop-filter: blur(8px);
  }

  @media (min-width: 640px) {
    .status-bar {
      gap: 0.625rem;
      padding: 0.5rem 1rem;
      font-size: 0.8125rem;
    }
  }

  .status-dot-live {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #28c840;
    box-shadow: 0 0 8px #28c84060;
    animation: pulse-live 2s ease-in-out infinite;
    flex-shrink: 0;
  }

  @keyframes pulse-live {
    0%, 100% { box-shadow: 0 0 4px #28c84040; }
    50% { box-shadow: 0 0 12px #28c84080; }
  }

  .status-text { color: var(--color-secondary); white-space: nowrap; }
  .status-divider { color: var(--color-border-strong); }
  .status-link {
    color: var(--color-accent);
    text-decoration: none;
    transition: opacity 0.2s;
    white-space: nowrap;
  }
  .status-link:hover { opacity: 0.8; }

  /* Heading */
  .hero-heading {
    text-align: center;
    font-size: clamp(2.25rem, 7vw, 5.5rem);
    font-weight: 800;
    line-height: 1.05;
    margin-bottom: 1.25rem;
    letter-spacing: -0.03em;
    padding: 0 0.25rem;
  }

  @media (min-width: 640px) {
    .hero-heading {
      margin-bottom: 1.5rem;
    }
  }

  .hero-line {
    display: block;
    color: var(--color-primary);
    opacity: 0;
    animation: hero-line-in 0.8s ease-out forwards;
  }

  .hero-line-1 { animation-delay: 0s; }
  .hero-line-2 { animation-delay: 0.15s; }
  .hero-line-3 { animation-delay: 0.3s; }

  @keyframes hero-line-in {
    from {
      opacity: 0;
      transform: translateY(20px);
      filter: blur(4px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
      filter: blur(0);
    }
  }

  .hero-fade-in {
    opacity: 0;
    animation: hero-fade 0.8s ease-out forwards;
  }

  @keyframes hero-fade {
    from { opacity: 0; transform: translateY(16px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Download block */
  .hero-download-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0;
  }

  @media (min-width: 640px) {
    .hero-download-block {
      gap: 1rem;
    }
  }

  /* Big download CTA */
  .cta-download {
    display: block;
    text-decoration: none;
    border-radius: 1rem;
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-strong) 100%);
    box-shadow:
      0 0 0 1px rgba(var(--color-accent-rgb), 0.3),
      0 8px 24px rgba(var(--color-accent-rgb), 0.25),
      inset 0 1px 0 rgba(255,255,255,0.15);
    transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    width: 100%;
    max-width: 24rem;
  }

  @media (min-width: 640px) {
    .cta-download {
      border-radius: 1.25rem;
      max-width: none;
      width: auto;
      box-shadow:
        0 0 0 1px rgba(var(--color-accent-rgb), 0.3),
        0 12px 40px rgba(var(--color-accent-rgb), 0.3),
        inset 0 1px 0 rgba(255,255,255,0.15);
    }
  }

  .cta-download::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(255,255,255,0.12) 0%, transparent 50%);
    pointer-events: none;
  }

  .cta-download:hover {
    transform: translateY(-3px) scale(1.01);
    box-shadow:
      0 0 0 1px rgba(var(--color-accent-rgb), 0.5),
      0 20px 60px rgba(var(--color-accent-rgb), 0.4),
      0 0 100px rgba(var(--color-accent-rgb), 0.15),
      inset 0 1px 0 rgba(255,255,255,0.15);
  }

  .cta-download-inner {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1.25rem;
    position: relative;
  }

  @media (min-width: 640px) {
    .cta-download-inner {
      gap: 1rem;
      padding: 1.125rem 2rem;
    }
  }

  .cta-icon-wrap {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0.75rem;
    background: rgba(255,255,255,0.15);
    color: white;
    flex-shrink: 0;
  }

  @media (min-width: 640px) {
    .cta-icon-wrap {
      width: 3rem;
      height: 3rem;
      border-radius: 0.875rem;
    }
  }

  .cta-dl-icon {
    width: 22px;
    height: 22px;
    animation: bounce-down 2s ease-in-out infinite;
  }

  @media (min-width: 640px) {
    .cta-dl-icon {
      width: 28px;
      height: 28px;
    }
  }

  @keyframes bounce-down {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(3px); }
  }

  .cta-text-wrap {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    min-width: 0;
  }

  .cta-main-text {
    font-size: 1rem;
    font-weight: 700;
    color: white;
    letter-spacing: -0.01em;
  }

  @media (min-width: 640px) {
    .cta-main-text {
      font-size: 1.125rem;
    }
  }

  .cta-sub-text {
    font-size: 0.6875rem;
    color: rgba(255,255,255,0.6);
    font-weight: 400;
  }

  @media (min-width: 640px) {
    .cta-sub-text {
      font-size: 0.75rem;
    }
  }

  .cta-arrow {
    color: rgba(255,255,255,0.4);
    flex-shrink: 0;
    transition: all 0.3s ease;
    transform: translateX(0);
  }

  .cta-download:hover .cta-arrow {
    color: rgba(255,255,255,0.8);
    transform: translateX(4px);
  }

  /* Trust row */
  .trust-row {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 0.25rem 0.625rem;
    margin-top: 0.125rem;
  }

  @media (min-width: 640px) {
    .trust-row {
      gap: 0.5rem 1rem;
      margin-top: 0.25rem;
    }
  }

  .trust-chip {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.6875rem;
    color: var(--color-secondary);
    opacity: 0.5;
    white-space: nowrap;
  }

  @media (min-width: 640px) {
    .trust-chip {
      gap: 0.375rem;
      font-size: 0.75rem;
    }
  }

  .trust-chip svg {
    color: var(--color-accent);
    opacity: 0.7;
    flex-shrink: 0;
  }

  /* GitHub link */
  .github-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    color: var(--color-secondary);
    opacity: 0.4;
    text-decoration: none;
    transition: all 0.2s;
    padding: 0.375rem 0;
  }

  @media (min-width: 640px) {
    .github-link {
      font-size: 0.8125rem;
    }
  }

  .github-link:hover {
    opacity: 0.7;
    color: var(--color-accent);
  }

  /* Screenshot frame */
  .screenshot-glow {
    position: absolute;
    inset: -6px;
    background: rgba(var(--color-accent-rgb), 0.06);
    border-radius: 1.5rem;
    filter: blur(40px);
  }

  .screenshot-border {
    position: absolute;
    inset: -1px;
    border-radius: 0.75rem;
    background: linear-gradient(160deg, rgba(var(--color-accent-rgb), 0.3), transparent 40%, transparent 60%, rgba(var(--color-accent-rgb), 0.1));
    z-index: 1;
  }

  @media (min-width: 640px) {
    .screenshot-border {
      border-radius: 1rem;
    }
  }

  .screenshot-frame {
    position: relative;
    border-radius: 0.75rem;
    overflow: hidden;
    border: 1px solid var(--color-border-strong);
    background: var(--color-terminal-bg);
    box-shadow:
      0 15px 30px -8px rgba(0, 0, 0, 0.3),
      0 0 40px rgba(var(--color-accent-rgb), 0.04);
    z-index: 2;
  }

  @media (min-width: 640px) {
    .screenshot-frame {
      border-radius: 1rem;
      box-shadow:
        0 25px 50px -12px rgba(0, 0, 0, 0.4),
        0 0 80px rgba(var(--color-accent-rgb), 0.06);
    }
  }

  .screenshot-chrome {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 0.75rem;
    background: var(--color-surface);
    border-bottom: 1px solid var(--color-border);
  }

  @media (min-width: 640px) {
    .screenshot-chrome {
      padding: 0.75rem 1rem;
    }
  }

  .screenshot-chrome-text {
    font-size: 10px;
    color: var(--color-primary);
    opacity: 0.2;
    font-family: var(--font-family-mono);
  }

  @media (min-width: 640px) {
    .screenshot-chrome-text {
      font-size: 11px;
    }
    .screenshot-chrome-text::after {
      content: ' — 3 projects · 2 agents active';
    }
  }
</style>
