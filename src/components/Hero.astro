---
---

<section class="relative pt-32 pb-20 px-6 overflow-hidden">
  <!-- Floating orbs -->
  <div class="absolute top-40 left-20 w-72 h-72 bg-[#e79f74]/10 rounded-full blur-3xl animate-float"></div>
  <div class="absolute top-60 right-20 w-96 h-96 bg-[#ad623d]/10 rounded-full blur-3xl animate-float-delayed"></div>

  <div class="max-w-6xl mx-auto text-center relative z-10">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-[#e79f74]/20 bg-[#e79f74]/5 mb-8">
      <span class="w-2 h-2 rounded-full bg-[#e79f74] animate-pulse"></span>
      <span class="text-sm text-[#e79f74]">Free to use â€” v0.0.1</span>
    </div>

    <!-- Main heading -->
    <h1 class="text-5xl md:text-7xl font-bold leading-tight mb-6">
      <span class="text-[#f4e9df]">Workstation for</span>
      <br />
      <span class="gradient-text">Effective AI Agents</span>
    </h1>

    <!-- Subheading -->
    <p class="text-xl md:text-2xl text-[#f4e9df]/60 max-w-3xl mx-auto mb-10 leading-relaxed">
      A self-contained desktop app that orchestrates multiple AI agents.
      <br class="hidden md:block" />
      No subscriptions. Free for individual use. Bring your own API keys.
    </p>

    <!-- CTA buttons -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-16">
      <a href="https://github.com/moltcode/moltcode/releases/download/0.0.1/MoltCode.dmg" class="btn-primary px-8 py-4 rounded-full text-lg font-medium flex items-center gap-2">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
        </svg>
        Download for Mac
      </a>
      <a href="https://github.com/moltcode/moltcode" target="_blank" class="btn-secondary px-8 py-4 rounded-full text-lg font-medium text-[#f4e9df] flex items-center gap-2">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        View on GitHub
      </a>
    </div>

    <!-- App screenshot mockup -->
    <div class="relative max-w-5xl mx-auto">
      <!-- Glow behind -->
      <div class="absolute inset-0 bg-[#e79f74]/10 blur-3xl rounded-3xl"></div>

      <!-- App window -->
      <div class="relative bg-[#0d0a08] rounded-2xl border border-white/10 shadow-2xl overflow-hidden">
        <!-- Window header -->
        <div class="flex items-center gap-4 px-4 py-3 border-b border-white/5 bg-white/[0.02]">
          <div class="flex gap-2">
            <div class="w-3 h-3 rounded-full bg-[#ff5f57]"></div>
            <div class="w-3 h-3 rounded-full bg-[#febc2e]"></div>
            <div class="w-3 h-3 rounded-full bg-[#28c840]"></div>
          </div>
          <span class="text-sm text-[#f4e9df]/40 font-mono">Molt Code</span>
        </div>

        <!-- App content -->
        <div class="flex min-h-[500px]">
          <!-- Left sidebar - Sessions -->
          <div class="w-64 border-r border-white/5 p-3 hidden lg:block">
            <div class="flex items-center justify-between mb-3">
              <span class="text-sm font-medium text-[#f4e9df]/80">acp</span>
              <div class="flex gap-1">
                <div class="w-6 h-6 rounded bg-white/5 flex items-center justify-center">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="#f4e9df" stroke-width="2" opacity="0.5"><path d="M12 5v14M5 12h14"/></svg>
                </div>
              </div>
            </div>

            <!-- Search -->
            <div class="relative mb-4">
              <input type="text" placeholder="Search sessions..." class="w-full bg-white/5 border border-white/5 rounded-lg px-3 py-2 text-sm text-[#f4e9df]/60 placeholder-[#f4e9df]/30 outline-none" readonly />
            </div>

            <!-- Session list -->
            <div class="space-y-1">
              <div class="flex items-center gap-2 px-2 py-2 rounded-lg bg-[#e79f74]/10 text-[#e79f74]">
                <span class="w-2 h-2 rounded-full bg-[#28c840]"></span>
                <span class="text-sm truncate">Review staged changes...</span>
              </div>
              <div class="flex items-center gap-2 px-2 py-2 rounded-lg text-[#f4e9df]/60 hover:bg-white/5">
                <span class="w-2 h-2 rounded-full bg-[#f4e9df]/30"></span>
                <span class="text-sm truncate">Fork claude session...</span>
              </div>
              <div class="flex items-center gap-2 px-2 py-2 rounded-lg text-[#f4e9df]/60 hover:bg-white/5">
                <span class="w-2 h-2 rounded-full bg-[#f4e9df]/30"></span>
                <span class="text-sm truncate">Show usage stats...</span>
              </div>
              <div class="flex items-center gap-2 px-2 py-2 rounded-lg text-[#f4e9df]/60 hover:bg-white/5">
                <span class="w-2 h-2 rounded-full bg-[#f4e9df]/30"></span>
                <span class="text-sm truncate">Edit sample file...</span>
              </div>
            </div>
          </div>

          <!-- Middle - Chat -->
          <div class="flex-1 flex flex-col border-r border-white/5">
            <!-- Chat messages -->
            <div class="flex-1 p-6">
              <div class="max-w-2xl mx-auto space-y-4">
                <!-- User message -->
                <div class="bg-[#1a1512] rounded-2xl p-4 border border-white/5">
                  <p class="text-[#f4e9df]/80 text-sm">Review the staged changes and create a commit. First run `git diff --staged` to see what's being committed, then create a clear, concise commit message following conventional commit format.</p>
                </div>

                <!-- Tool calls -->
                <div class="space-y-2 pl-4 border-l-2 border-[#e79f74]/30">
                  <div class="text-xs text-[#f4e9df]/40 flex items-center gap-2">
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="4 17 10 11 4 5"/></svg>
                    bash(command: "git status", description: "Check git status")
                  </div>
                  <div class="text-xs text-[#f4e9df]/40 flex items-center gap-2">
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="4 17 10 11 4 5"/></svg>
                    bash(command: "git diff --staged", description: "Show staged changes")
                  </div>
                  <div class="text-xs text-[#f4e9df]/40 flex items-center gap-2">
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="4 17 10 11 4 5"/></svg>
                    bash(command: "git commit -m ...", description: "Create commit")
                  </div>
                </div>

                <!-- Success message -->
                <div class="bg-[#28c840]/10 border border-[#28c840]/20 rounded-xl p-3 flex items-center gap-3">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#28c840" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
                  <span class="text-sm text-[#f4e9df]/80">Commit created successfully: <code class="text-[#e79f74]">a626f43</code></span>
                </div>
              </div>
            </div>

            <!-- Input area -->
            <div class="p-4 border-t border-white/5">
              <div class="bg-[#1a1512] rounded-xl border border-white/5 p-3">
                <div class="text-[#f4e9df]/30 text-sm">Message OpenCode...</div>
              </div>
            </div>
          </div>

          <!-- Right - Agent selector -->
          <div class="w-80 p-6 hidden xl:block">
            <div class="text-center mb-8">
              <svg width="64" height="64" viewBox="0 0 64 64" class="mx-auto mb-4 rounded-2xl">
                <defs>
                  <linearGradient id="heroBgGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" stop-color="#27272a"/>
                    <stop offset="100%" stop-color="#3f3f46"/>
                  </linearGradient>
                  <linearGradient id="heroCopperGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" stop-color="#b45309"/>
                    <stop offset="50%" stop-color="#d97706"/>
                    <stop offset="100%" stop-color="#92400e"/>
                  </linearGradient>
                  <linearGradient id="heroBronzeGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" stop-color="#f59e0b"/>
                    <stop offset="100%" stop-color="#d97706"/>
                  </linearGradient>
                </defs>
                <rect x="0" y="0" width="64" height="64" rx="14" fill="url(#heroBgGrad)"/>
                <rect x="12" y="30" width="16" height="24" rx="4" fill="url(#heroCopperGrad)"/>
                <rect x="34" y="20" width="16" height="34" rx="4" fill="url(#heroCopperGrad)" opacity="0.7"/>
                <rect x="24" y="10" width="16" height="28" rx="4" fill="url(#heroBronzeGrad)"/>
              </svg>
              <h3 class="text-lg font-semibold text-[#f4e9df] mb-1">Start a new chat</h3>
            </div>

            <!-- Agent buttons -->
            <div class="flex flex-wrap gap-2 justify-center mb-6">
              <button class="px-4 py-2 rounded-full bg-[#e79f74]/10 border border-[#e79f74]/30 text-[#e79f74] text-sm flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-[#e79f74]"></span>
                Claude Code
              </button>
              <button class="px-4 py-2 rounded-full bg-white/5 border border-white/10 text-[#f4e9df]/60 text-sm flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-[#f59e0b]"></span>
                Gemini Code
              </button>
              <button class="px-4 py-2 rounded-full bg-white/5 border border-white/10 text-[#f4e9df]/60 text-sm flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-[#10b981]"></span>
                OpenAI Codex
              </button>
              <button class="px-4 py-2 rounded-full bg-[#3b82f6]/10 border border-[#3b82f6]/30 text-[#3b82f6] text-sm flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-[#3b82f6]"></span>
                OpenCode
              </button>
            </div>

            <!-- Project selector -->
            <div class="bg-white/5 rounded-xl p-3 mb-6">
              <div class="flex items-center gap-2 text-[#f4e9df]/60 text-sm">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 3h18v18H3z"/><path d="M3 9h18"/><path d="M9 21V9"/></svg>
                <span>acp</span>
              </div>
            </div>

            <!-- Try asking -->
            <div class="text-xs text-[#f4e9df]/40 uppercase tracking-wider mb-3">Try asking</div>
            <div class="space-y-2">
              <div class="bg-white/5 rounded-lg p-3 text-sm text-[#f4e9df]/60 hover:bg-white/10 cursor-pointer transition-colors">
                Find and fix bugs in the codebase
              </div>
              <div class="bg-white/5 rounded-lg p-3 text-sm text-[#f4e9df]/60 hover:bg-white/10 cursor-pointer transition-colors">
                Explain how this code works
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
