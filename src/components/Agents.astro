            {agent.icon === "gemini" && (
              <img src="/icons/gemini.svg" alt="Gemini" class="agent-img-icon" />
            )}
            {agent.icon === "opencode" && (
              <img src="/icons/opencode.png" alt="OpenCode" class="agent-img-icon" />
            )}
          </div>
          <div class="agent-label">
            <span class="agent-name">{agent.name}</span>
            <span class="agent-provider">{agent.provider}</span>
          </div>
        </div>
      ))}
    </div>

    <div class="more-agents">
      <div class="more-line"></div>
      <span class="more-text">More runtimes coming &mdash; built on an extensible adapter system</span>
      <div class="more-line"></div>
    </div>
