</section>

<style>
  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    margin-bottom: 1rem;
    padding: 0.375rem 1rem;
    border-radius: 9999px;
    background: rgba(var(--color-accent-rgb), 0.08);
    border: 1px solid rgba(var(--color-accent-rgb), 0.15);
  }

  .section-badge-dot {
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: var(--color-accent);
  }

  .agent-row {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 2rem 3rem;
  }

  .agent-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    transition: opacity 0.2s ease;
  }

  .agent-item:hover {
    opacity: 0.7;
  }

  .agent-icon {
    width: 32px;
    height: 32px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .agent-icon svg {
    width: 100%;
    height: 100%;
  }

  .agent-img-icon {
    width: 32px;
    height: 32px;
    border-radius: 6px;
    object-fit: contain;
  }

  .codex-icon {
    color: var(--color-primary);
  }

  .agent-label {
    display: flex;
    flex-direction: column;
  }

  .agent-name {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-primary);
    line-height: 1.2;
  }

  .agent-provider {
    font-size: 0.625rem;
    color: var(--color-secondary);
    opacity: 0.5;
    font-family: var(--font-family-mono);
  }

  .more-agents {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
  }

  .more-line {
    flex: 1;
    height: 1px;
    background: var(--color-border);
  }

  .more-text {
    font-size: 0.75rem;
    color: var(--color-secondary);
    opacity: 0.5;
    white-space: nowrap;
  }
</style>
