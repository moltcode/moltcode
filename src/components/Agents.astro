---
const agents = [
  {
    name: "Claude Code",
    provider: "Anthropic",
    color: "#e79f74",
    description: "Anthropic's powerful coding assistant with deep reasoning capabilities and MCP tool integration.",
    features: ["Advanced reasoning", "MCP permissions", "Tool calling"]
  },
  {
    name: "Codex",
    provider: "OpenAI",
    color: "#10b981",
    description: "OpenAI's code-specialized model optimized for understanding and generating code.",
    features: ["Code completion", "Multi-language", "Fast inference"]
  },
  {
    name: "OpenCode",
    provider: "Open Source",
    color: "#3b82f6",
    description: "Open-source coding agents that run locally with full transparency and customization.",
    features: ["Self-hosted", "Customizable", "No API costs"]
  },
  {
    name: "Gemini",
    provider: "Google",
    color: "#f59e0b",
    description: "Google's multimodal model with strong code understanding and generation abilities.",
    features: ["Multimodal", "Large context", "Fast responses"]
  }
];
---

<section id="agents" class="py-24 px-6 relative">
  <!-- Background accent -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[400px] bg-[#e79f74]/5 rounded-full blur-3xl"></div>
  </div>

  <div class="max-w-6xl mx-auto relative z-10">
    <!-- Section header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-[#f4e9df] mb-4">
        One interface,
        <span class="gradient-text">multiple agents</span>
      </h2>
      <p class="text-xl text-[#f4e9df]/60 max-w-2xl mx-auto">
        Switch between AI providers without switching tools. Use the best model for each task.
      </p>
    </div>

    <!-- Agents grid -->
    <div class="grid md:grid-cols-2 gap-6">
      {agents.map((agent) => (
        <div class="card-hover bg-[#1a1512]/50 rounded-2xl p-6 backdrop-blur-sm relative overflow-hidden group">
          <!-- Accent glow -->
          <div class="absolute top-0 right-0 w-32 h-32 rounded-full blur-3xl opacity-20 group-hover:opacity-30 transition-opacity" style={`background: ${agent.color}`}></div>

          <div class="relative z-10">
            <!-- Header -->
            <div class="flex items-center gap-3 mb-4">
              <div class="w-3 h-3 rounded-full" style={`background: ${agent.color}`}></div>
              <h3 class="text-xl font-semibold text-[#f4e9df]">{agent.name}</h3>
              <span class="text-sm text-[#f4e9df]/40 ml-auto">{agent.provider}</span>
            </div>

            <!-- Description -->
            <p class="text-[#f4e9df]/60 mb-4 leading-relaxed">{agent.description}</p>

            <!-- Features -->
            <div class="flex flex-wrap gap-2">
              {agent.features.map((feature) => (
                <span class="px-3 py-1 rounded-full text-xs bg-[#f4e9df]/5 text-[#f4e9df]/70 border border-[#f4e9df]/10">
                  {feature}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Extensibility note -->
    <div class="mt-12 text-center">
      <p class="text-[#f4e9df]/50">
        More agents coming soon. Built on an extensible adapter system.
      </p>
    </div>
  </div>
</section>
