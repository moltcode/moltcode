---
const agents = [
  {
    name: "Claude Code",
    provider: "Anthropic",
    color: "#e79f74",
    colorRgb: "231, 159, 116",
    features: ["Deep reasoning", "MCP tools", "Best for planning"],
    speed: 85,
  },
  {
    name: "Codex",
    provider: "OpenAI",
    color: "#10b981",
    colorRgb: "16, 185, 129",
    features: ["Code-optimized", "Fast inference", "Multi-language"],
    speed: 95,
  },
  {
    name: "Gemini CLI",
    provider: "Google",
    color: "#f59e0b",
    colorRgb: "245, 158, 11",
    features: ["Multimodal", "Large context", "Fast"],
    speed: 90,
  },
  {
    name: "OpenCode",
    provider: "Open Source",
    color: "#3b82f6",
    colorRgb: "59, 130, 246",
    features: ["Self-hosted", "Customizable", "No API costs"],
    speed: 75,
  },
];
---

<section id="agents" class="py-24 px-6 relative">
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[300px] rounded-full blur-3xl" style="background: rgba(var(--color-accent-rgb), 0.04)"></div>
  </div>

  <div class="max-w-4xl mx-auto relative z-10">
    <div class="text-center mb-14">
      <div class="section-badge">
        <span class="section-badge-dot"></span>
        Agents
      </div>
      <h2 class="text-3xl md:text-5xl font-bold text-theme-primary mb-4">
        Use the best model<br />for <span class="gradient-text">each task</span>
      </h2>
      <p class="text-lg text-theme-primary/50 max-w-xl mx-auto">
        One interface, every provider. Switch agents per session without switching tools.
      </p>
    </div>

    <!-- Agent cards grid -->
    <div class="agent-grid">
      {agents.map((agent) => (
        <div class="agent-card" style={`--agent-color: ${agent.color}; --agent-color-rgb: ${agent.colorRgb}`}>
          <div class="agent-card-header">
            <div class="agent-identity">
              <div class="agent-dot" style={`background: ${agent.color}; box-shadow: 0 0 10px ${agent.color}40`}></div>
              <div>
                <span class="agent-name">{agent.name}</span>
                <span class="agent-provider">{agent.provider}</span>
              </div>
            </div>
            <span class="agent-status" style={`color: ${agent.color}`}>● ready</span>
          </div>
          
          <!-- Speed bar -->
          <div class="agent-speed">
            <div class="speed-track">
              <div class="speed-fill" style={`width: ${agent.speed}%; background: ${agent.color}`}></div>
            </div>
          </div>

          <div class="agent-tags">
            {agent.features.map((f) => (
              <span class="agent-tag">{f}</span>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- More coming -->
    <div class="more-agents">
      <div class="more-line"></div>
      <span class="more-text">More agents coming — built on an extensible adapter system</span>
      <div class="more-line"></div>
    </div>
  </div>
</section>

<style>
  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    margin-bottom: 1rem;
    padding: 0.375rem 1rem;
    border-radius: 9999px;
    background: rgba(var(--color-accent-rgb), 0.08);
    border: 1px solid rgba(var(--color-accent-rgb), 0.15);
  }

  .section-badge-dot {
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: var(--color-accent);
  }

  .agent-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.75rem;
  }

  @media (min-width: 768px) {
    .agent-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .agent-card {
    padding: 1.25rem;
    border-radius: 1rem;
    border: 1px solid var(--color-border);
    background: var(--color-surface);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .agent-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 3px;
    height: 100%;
    background: var(--agent-color);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .agent-card:hover::before { opacity: 1; }

  .agent-card:hover {
    border-color: rgba(var(--agent-color-rgb), 0.25);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.12);
  }

  .agent-card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
  }

  .agent-identity {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .agent-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .agent-name {
    display: block;
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-primary);
    line-height: 1.2;
  }

  .agent-provider {
    display: block;
    font-size: 0.6875rem;
    color: var(--color-secondary);
    opacity: 0.6;
    font-family: var(--font-family-mono);
  }

  .agent-status {
    font-family: var(--font-family-mono);
    font-size: 0.625rem;
    font-weight: 500;
    letter-spacing: 0.02em;
  }

  .agent-speed {
    margin-bottom: 0.75rem;
  }

  .speed-track {
    height: 3px;
    background: var(--color-border);
    border-radius: 2px;
    overflow: hidden;
  }

  .speed-fill {
    height: 100%;
    border-radius: 2px;
    transition: width 1s ease-out;
  }

  .agent-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .agent-tag {
    font-size: 0.625rem;
    color: var(--color-secondary);
    opacity: 0.6;
    background: rgba(var(--color-accent-rgb), 0.05);
    padding: 0.2rem 0.5rem;
    border-radius: 9999px;
    border: 1px solid var(--color-border);
  }

  .more-agents {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
  }

  .more-line {
    flex: 1;
    height: 1px;
    background: var(--color-border);
  }

  .more-text {
    font-size: 0.75rem;
    color: var(--color-secondary);
    opacity: 0.5;
    white-space: nowrap;
  }
</style>