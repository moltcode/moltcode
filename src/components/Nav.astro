---
import ThemeToggle from './ThemeToggle.astro';
---

<nav class="fixed top-0 left-0 right-0 z-50 glass">
  <div class="max-w-7xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <svg width="36" height="36" viewBox="0 0 64 64" class="rounded-lg shadow-lg group-hover:shadow-[0_0_20px_rgba(231,159,116,0.4)] transition-shadow">
          <defs>
            <linearGradient id="navBgGrad" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" stop-color="#27272a"/>
              <stop offset="100%" stop-color="#3f3f46"/>
            </linearGradient>
            <linearGradient id="navCopperGrad" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" stop-color="#b45309"/>
              <stop offset="50%" stop-color="#d97706"/>
              <stop offset="100%" stop-color="#92400e"/>
            </linearGradient>
            <linearGradient id="navBronzeGrad" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" stop-color="#f59e0b"/>
              <stop offset="100%" stop-color="#d97706"/>
            </linearGradient>
          </defs>
          <rect x="0" y="0" width="64" height="64" rx="14" fill="url(#navBgGrad)"/>
          <rect x="12" y="30" width="16" height="24" rx="4" fill="url(#navCopperGrad)"/>
          <rect x="34" y="20" width="16" height="34" rx="4" fill="url(#navCopperGrad)" opacity="0.7"/>
          <rect x="24" y="10" width="16" height="28" rx="4" fill="url(#navBronzeGrad)"/>
        </svg>
        <span class="text-xl font-semibold text-theme-primary">Molt Code</span>
      </a>

      <!-- Nav Links -->
      <div class="hidden md:flex items-center gap-8">
        <a href="#features" class="text-theme-primary/70 hover:text-theme-accent transition-colors text-sm">Features</a>
        <a href="#agents" class="text-theme-primary/70 hover:text-theme-accent transition-colors text-sm">Agents</a>
        <a href="/docs/what-is-moltcode" class="text-theme-primary/70 hover:text-theme-accent transition-colors text-sm">Docs</a>
        <a href="/docs/changelog" class="text-theme-primary/70 hover:text-theme-accent transition-colors text-sm">Changelog</a>
      </div>

      <!-- CTA -->
      <div class="flex items-center gap-4">
        <a href="https://github.com/moltcode/moltcode" target="_blank" rel="noopener" class="text-theme-primary/70 hover:text-theme-accent transition-colors">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
