---
const roles = [
  {
    name: "Default",
    title: "Standard coding agent",
    description: "The general-purpose workhorse. Reads, writes, tests, and ships code.",
    color: "#e79f74",
    colorRgb: "231, 159, 116",
  },
  {
    name: "Planner",
    title: "Explore and create plans",
    description: "Read-only codebase explorer. Drafts PRDs and implementation plans — no file editing.",
    color: "#3b82f6",
    colorRgb: "59, 130, 246",
  },
  {
    name: "Issue Resolver",
    title: "Resolves issues in topological order",
    description: "Takes dependency-tracked issues and resolves them in the right sequence.",
    color: "#10b981",
    colorRgb: "16, 185, 129",
  },
  {
    name: "Lisp Agent",
    title: "Single eval tool — Lisp DSL",
    description: "Experimental agent that operates entirely through a Lisp DSL. Evolving.",
    color: "#8b5cf6",
    colorRgb: "139, 92, 246",
  },
  {
    name: "Designer",
    title: "Visual designer",
    description: "Creates and edits canvas objects. Actual rendered UI — not vague architecture.",
    color: "#ec4899",
    colorRgb: "236, 72, 153",
  },
  {
    name: "Conductor",
    title: "Lifecycle orchestrator",
    description: "Delegates to sub-agents, manages sessions, and verifies the final output.",
    color: "#f59e0b",
    colorRgb: "245, 158, 11",
  },
];
---

<section id="agent-roles" class="py-24 px-6 relative">
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[300px] rounded-full blur-3xl" style="background: rgba(var(--color-accent-rgb), 0.04)"></div>
  </div>

  <div class="max-w-5xl mx-auto relative z-10">
    <div class="text-center mb-10 md:mb-14">
      <div class="section-badge">
        <span class="section-badge-dot"></span>
        The Team
      </div>
      <h2 class="text-2xl md:text-4xl font-bold text-theme-primary mb-3">
        Meet your <span class="gradient-text">agent team</span>
      </h2>
      <p class="text-sm md:text-base text-theme-primary/50 max-w-2xl mx-auto">
        Six specialized roles that plan, design, coordinate, and ship.
      </p>
    </div>

    <div class="roles-grid">
      {roles.map((role) => (
        <div class="role-card" style={`--role-color: ${role.color}; --role-color-rgb: ${role.colorRgb}`}>
          <div class="role-dot-wrap">
            <div class="role-dot"></div>
          </div>
          <div class="role-text">
            <div class="role-header">
              <span class="role-name">{role.name}</span>
              <span class="role-title">{role.title}</span>
            </div>
            <p class="role-desc">{role.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    margin-bottom: 1rem;
    padding: 0.375rem 1rem;
    border-radius: 9999px;
    background: rgba(var(--color-accent-rgb), 0.08);
    border: 1px solid rgba(var(--color-accent-rgb), 0.15);
  }

  .section-badge-dot {
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: var(--color-accent);
  }

  .roles-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.5rem;
  }

  @media (min-width: 480px) {
    .roles-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.625rem;
    }
  }

  @media (min-width: 768px) {
    .roles-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 0.75rem;
    }
  }

  .role-card {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 0.875rem 1rem;
    border-radius: 0.875rem;
    border: 1px solid var(--color-border);
    background: var(--color-surface);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .role-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 3px;
    height: 100%;
    background: var(--role-color);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .role-card:hover::before {
    opacity: 1;
  }

  .role-card:hover {
    border-color: rgba(var(--role-color-rgb), 0.25);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .role-dot-wrap {
    flex-shrink: 0;
    padding-top: 0.25rem;
  }

  .role-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--role-color);
    box-shadow: 0 0 8px rgba(var(--role-color-rgb), 0.4);
  }

  .role-text {
    min-width: 0;
  }

  .role-header {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    margin-bottom: 0.125rem;
  }

  .role-name {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-primary);
    line-height: 1.3;
  }

  .role-title {
    font-family: var(--font-family-mono);
    font-size: 0.625rem;
    color: var(--role-color);
    opacity: 0.7;
    white-space: nowrap;
  }

  .role-desc {
    font-size: 0.75rem;
    line-height: 1.5;
    color: var(--color-secondary);
    opacity: 0.7;
  }
</style>
