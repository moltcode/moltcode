    </div>
  </div>
</section>

<style>
  .section-label {
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-secondary);
    opacity: 0.5;
    margin-bottom: 1.5rem;
  }

  .story-col {
    padding-right: 2.5rem;
  }

  .story-blocks p {
    color: var(--color-secondary);
    line-height: 1.8;
    font-size: 0.9375rem;
    margin-bottom: 1.25rem;
  }

  .story-blocks p:last-child {
    margin-bottom: 0;
  }

  .story-blocks strong {
    color: var(--color-primary);
    font-weight: 500;
  }

  /* Vertical rule */
  .vr {
    background: var(--color-border);
    align-self: stretch;
  }

  /* Sidebar */
  .side-col {
    padding-left: 2.5rem;
    position: sticky;
    top: 6rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .side-kicker {
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-accent);
    margin-bottom: 0.75rem;
  }

  .side-block {
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .side-value {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-primary);
    margin: 0;
    line-height: 1.3;
  }

  .side-sub {
    font-size: 0.8125rem;
    color: var(--color-secondary);
    opacity: 0.6;
    margin: 0.125rem 0 0;
  }

  .side-bugs {
    padding-top: 0.5rem;
  }

  .side-bugs p {
    font-size: 0.75rem;
    color: var(--color-secondary);
    opacity: 0.5;
    line-height: 1.5;
    margin: 0 0 0.625rem;
  }

  .side-bugs em {
    color: var(--color-secondary);
    opacity: 0.85;
    font-style: normal;
    font-weight: 500;
  }

  .issue-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    color: var(--color-secondary);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .issue-link:hover {
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .grid {
      display: flex;
      flex-direction: column;
      gap: 2.5rem;
    }

    .story-col {
      padding-right: 0;
    }

    .vr {
      height: 1px;
      width: 100%;
    }

    .side-col {
      padding-left: 0;
      position: static;
    }
  }
</style>
