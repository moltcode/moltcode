---
const features = [
  {
    icon: `<svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"/><path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"/></svg>`,
    title: "Desktop Notifications",
    description: "Get notified instantly when an agent needs your approval — no more tab-checking or wasted idle time.",
    sub: "Watch a YouTube video while agents work. You'll know the moment they need you.",
    tag: null,
  },
  {
    icon: `<svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8Z"/><path d="M14 2v6h6"/><path d="M16 13H8"/><path d="M16 17H8"/><path d="M10 9H8"/></svg>`,
    title: "Structured Dev Tools",
    description: "Built-in Docs, PRDs, and Issues — for both you and the agents.",
    sub: "Write with Claude Opus, get it implemented with Codex or Minimax. All structured, all tracked.",
    tag: null,
  },
  {
    icon: `<svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/><path d="M12 10v6"/><path d="M9 13h6"/></svg>`,
    title: "Session Groups",
    description: "Pick multiple projects, create a feature — keep all issues, PRDs, and sessions together for agents to access.",
    sub: "No more juggling tabs. One group per feature, across repos, with everything agents need in one place.",
    tag: null,
  },
  {
    icon: `<svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/><path d="M8 9h8"/><path d="M8 13h6"/></svg>`,
    title: "Channels",
    description: "A chat-like interface for supervised agent conversations.",
    sub: "Agent crafts prompts, fixes issues, talks to other agents — then reports back to you in a thread.",
    tag: "Beta",
  },
];
---

<section class="py-20 px-6 relative overflow-hidden">
  <!-- Subtle background accent -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[300px] bg-[#e79f74]/5 rounded-full blur-3xl pointer-events-none"></div>

  <div class="max-w-5xl mx-auto relative z-10">
    <!-- Section header -->
    <div class="text-center mb-14">
      <p class="text-sm font-medium text-[#e79f74] tracking-wide uppercase mb-3">Core Experience</p>
      <h2 class="text-3xl md:text-4xl font-bold text-[#f4e9df] mb-4">
        Built around how you actually work
      </h2>
      <p class="text-lg text-[#f4e9df]/50 max-w-2xl mx-auto">
        Features designed to keep you in flow — not fight your tools.
      </p>
    </div>

    <!-- Features grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
      {features.map((feature) => (
        <div class="hero-feature-card group">
          <div class="flex items-start gap-4">
            <div class="feature-icon shrink-0 mt-0.5" set:html={feature.icon}></div>
            <div class="min-w-0">
              <div class="flex items-center gap-2 mb-1.5">
                <h3 class="text-base font-semibold text-[#f4e9df]">{feature.title}</h3>
                {feature.tag && (
                  <span class="text-[10px] font-semibold uppercase tracking-wider px-2 py-0.5 rounded-full bg-[#e79f74]/10 text-[#e79f74] border border-[#e79f74]/20">
                    {feature.tag}
                  </span>
                )}
              </div>
              <p class="text-sm text-[#f4e9df]/60 leading-relaxed mb-2">{feature.description}</p>
              <p class="text-xs text-[#f4e9df]/35 leading-relaxed">{feature.sub}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .hero-feature-card {
    padding: 1.5rem;
    border-radius: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.06);
    background: rgba(26, 21, 18, 0.4);
    transition: all 0.3s ease;
  }

  .hero-feature-card:hover {
    border-color: rgba(231, 159, 116, 0.2);
    background: rgba(26, 21, 18, 0.6);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2), 0 0 20px rgba(231, 159, 116, 0.04);
  }
</style>
