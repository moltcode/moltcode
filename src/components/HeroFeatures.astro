---
const pillars = [
  {
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="3" width="20" height="14" rx="2"/><path d="M8 21h8"/><path d="M12 17v4"/><path d="M6 8l4 4-4 4"/><line x1="12" y1="16" x2="18" y2="16"/></svg>`,
    label: "Desktop-Native",
    desc: "Real app. Real notifications. Real performance.",
    stat: "<100ms",
    statLabel: "launch time",
  },
  {
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"/><path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/></svg>`,
    label: "Multi-Agent",
    desc: "Claude, Codex, Gemini — side by side.",
    stat: "4+",
    statLabel: "agents supported",
  },
  {
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 2l-2 2m-7.61 7.61a5.5 5.5 0 1 1-7.778 7.778 5.5 5.5 0 0 1 7.777-7.777zm0 0L15.5 7.5m0 0l3 3L22 7l-3-3m-3.5 3.5L19 4"/></svg>`,
    label: "Your Keys",
    desc: "Direct API. No middleman markup.",
    stat: "$0",
    statLabel: "platform fee",
  },
  {
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/><path d="M12 11v6"/><path d="M9 14h6"/></svg>`,
    label: "Multi-Project",
    desc: "One feature across many codebases.",
    stat: "∞",
    statLabel: "projects",
  },
];
---

<section class="py-8 px-6">
  <div class="max-w-5xl mx-auto">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
      {pillars.map((p) => (
        <div class="pillar-card group">
          <div class="pillar-top">
            <div class="pillar-icon" set:html={p.icon}></div>
            <div class="pillar-stat">
              <span class="stat-value">{p.stat}</span>
              <span class="stat-label">{p.statLabel}</span>
            </div>
          </div>
          <h3 class="text-sm font-semibold text-theme-primary mb-1">{p.label}</h3>
          <p class="text-xs text-theme-primary/40 leading-relaxed">{p.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .pillar-card {
    padding: 1.25rem;
    border-radius: 1rem;
    border: 1px solid var(--color-border);
    background: var(--color-surface);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .pillar-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, rgba(var(--color-accent-rgb), 0.5), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .pillar-card:hover::before {
    opacity: 1;
  }

  .pillar-card:hover {
    border-color: rgba(var(--color-accent-rgb), 0.2);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.15);
  }

  .pillar-top {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 1rem;
  }

  .pillar-icon {
    color: var(--color-accent);
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.625rem;
    background: linear-gradient(135deg, rgba(var(--color-accent-rgb), 0.12) 0%, rgba(var(--color-accent-strong-rgb), 0.08) 100%);
    border: 1px solid rgba(var(--color-accent-rgb), 0.15);
  }

  .pillar-stat {
    text-align: right;
    display: flex;
    flex-direction: column;
  }

  .stat-value {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-accent);
    font-family: var(--font-family-mono);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.5625rem;
    color: var(--color-secondary);
    opacity: 0.4;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>