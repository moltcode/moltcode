---
import '../styles/global.css'

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Molt Code is the harness your AI coding agents need. It gives Claude, Codex, and Gemini the structure, context, and coordination to actually ship â€” using your own API keys. Free desktop app." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Google Analytics -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-GPY1Q2VV2W"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-GPY1Q2VV2W');
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0b0907" media="(prefers-color-scheme: dark)" />
    <meta name="theme-color" content="#faf7f4" media="(prefers-color-scheme: light)" />

    <!-- Prevent flash of wrong theme -->
    <script is:inline>
      (function() {
        var stored = localStorage.getItem('theme');
        if (stored === 'light' || stored === 'dark') {
          document.documentElement.setAttribute('data-theme', stored);
        } else if (window.matchMedia('(prefers-color-scheme: light)').matches) {
          document.documentElement.setAttribute('data-theme', 'light');
        } else {
          document.documentElement.setAttribute('data-theme', 'dark');
        }
      })();
    </script>

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://moltcode.com" />
    <meta property="og:image" content="https://moltcode.com/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://moltcode.com/og-image.png" />

    <meta name="application-name" content="Molt Code" />
    <meta property="og:site_name" content="Molt Code" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="canonical" href={`https://moltcode.com${Astro.url.pathname}`} />
    <title>{title}</title>

    <!-- Structured data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "SoftwareApplication",
          "name": "Molt Code",
          "alternateName": "MoltCode",
          "url": "https://moltcode.com",
          "applicationCategory": "DeveloperApplication",
          "operatingSystem": "macOS",
          "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" },
          "description": description,
          "screenshot": "https://moltcode.com/og-image.png",
          "softwareVersion": "0.0.54",
          "downloadUrl": "https://github.com/moltcode/moltcode/releases",
          "author": { "@type": "Organization", "name": "Molt Code", "url": "https://moltcode.com" }
        },
        {
          "@type": "WebSite",
          "name": "Molt Code",
          "url": "https://moltcode.com"
        },
        {
          "@type": "Organization",
          "name": "Molt Code",
          "url": "https://moltcode.com",
          "logo": "https://moltcode.com/favicon.svg",
          "sameAs": ["https://github.com/moltcode/moltcode"]
        }
      ]
    })} />
  </head>
  <body class="gradient-bg grid-pattern noise-overlay relative min-h-screen antialiased">
    <slot />

    <!-- Track download button clicks as virtual pageviews (uses Cloudflare auto-injected beacon) -->
    <script>
      document.querySelectorAll('[data-track-download]').forEach((el) => {
        el.addEventListener('click', () => {
          if (window.__cfBeacon && window.__cfBeacon.load) {
            window.__cfBeacon.load({ path: '/virtual/download-click' });
          }
        });
      });
    </script>
  </body>
</html>
