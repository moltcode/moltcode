---
import '../styles/global.css'

interface Props {
  title: string;
  description?: string;
}

const { title, description = "The AI coding workstation for developers who bring their own keys. Self-hosted, multi-agent, and built for power users." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0b0907" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://moltcode.com" />
    <meta property="og:image" content="https://moltcode.com/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://moltcode.com/og-image.png" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="gradient-bg grid-pattern noise-overlay relative min-h-screen antialiased">
    <slot />
  </body>
</html>
